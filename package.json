{
  "name": "BB_List",
  "version": "1.0.0",
  "description": "A simple todo list",
  "main": "index.ts ",
  "repository": "git@github.com:NonsoAmadi10/BB_List.git",
  "author": "NonsoAmadi10 <nonsoamadi@aol.com>",
  "license": "MIT",
  "private": false,
  "scripts": {
    "build": "tsc",
    "test": "env TS_NODE_COMPILER_OPTIONS='{\"module\": \"commonjs\" }' mocha -r ts-node/register 'test/**/*.ts'",
    "dev": "export NODE_ENV=development && nodemon ./src/index.ts",
    "start": "yarn build && node ./build/index.js",
    "undo:seed": "./node_modules/.bin/ts-node ./node_modules/.bin/sequelize db:seed:undo:all",
    "seed": "./node_modules/.bin/ts-node ./node_modules/.bin/sequelize db:seed:all",
    "undo:migration": "./node_modules/.bin/ts-node ./node_modules/.bin/sequelize db:migrate:undo:all",
    "migrate": "./node_modules/.bin/ts-node ./node_modules/.bin/sequelize db:migrate"
  },
  "dependencies": {
    "@types/pg": "^7.14.11",
    "@types/uuid": "^8.3.0",
    "@types/validator": "^13.1.3",
    "bcrypt": "^5.0.1",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "jsonwebtoken": "^8.5.1",
    "pg": "^8.6.0",
    "pg-hstore": "^2.3.3",
    "sequelize": "^6.6.2",
    "sequelize-cli": "^6.2.0",
    "ts-node": "^9.1.1",
    "typescript": "^4.2.3",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@types/bcrypt": "^3.0.0",
    "@types/chai": "^4.2.16",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.11",
    "@types/jsonwebtoken": "^8.5.0",
    "@types/mocha": "^8.2.2",
    "@types/node": "^14.14.34",
    "chai": "^4.3.4",
    "mocha": "^8.3.2"
  }
}
